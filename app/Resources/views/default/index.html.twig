{% extends 'layout.html.twig' %}

{% block body %}
    <div class="contacts">
        <h2>Your Contacts</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Row</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.getId() }}</td>
                        <td>{{ contact.getFirstName() }}</td>
                        <td>{{ contact.getLastName() }}</td>
                        <td><a href="{{ path('contact_page', {'id':contact.getId()}) }}">{{ contact.getEmail() }}</a></td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
